<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:stretchColumns="1"
    tools:context="com.modnsolutions.bankaccount.CheckBalance">

    <TableRow
        android:layout_gravity="center_horizontal"
        android:paddingLeft="@dimen/table_padding"
        android:paddingRight="@dimen/table_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/previous_amount"
            android:textStyle="bold"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/previous_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"/>

    </TableRow>

    <TableRow
        android:layout_gravity="center_horizontal"
        android:paddingLeft="@dimen/table_padding"
        android:paddingRight="@dimen/table_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/last_withdrawal"
            android:textStyle="bold"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/last_withdrawal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"/>

    </TableRow>

    <TableRow
        android:layout_gravity="center_horizontal"
        android:paddingLeft="@dimen/table_padding"
        android:paddingRight="@dimen/table_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/balance"
            android:textStyle="bold"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"/>


    </TableRow>

</TableLayout>
