<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.modnsolutions.bankaccount" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Deposit"
            android:label="@string/title_activity_deposit"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.modnsolutions.bankaccount.MainActivity" />
        </activity>
        <activity
            android:name=".Withdraw"
            android:label="@string/title_activity_withdraw"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.modnsolutions.bankaccount.MainActivity" />
        </activity>
        <activity
            android:name=".CheckBalance"
            android:label="@string/title_activity_check_balance"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.modnsolutions.bankaccount.MainActivity" />
        </activity>
    </application>

</manifest>
